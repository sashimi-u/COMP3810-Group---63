    <%- include('partials/header', { user: user }) %>
    <%- include('partials/sidebar', { active: 'admin' }) %>

    <main class="content">
      <h1>Admin Tools</h1>
      <p>Welcome, <%= user.username %> (role: <%= user.role %>)</p>

      <div class="controls">
        <a href="/admin/users/list" class="btn btn-primary">Show Website Users</a>
      </div>

      <p><a href="/dashboard" class="btn btn-ghost">‚Üê Back to Dashboard</a></p>
    </main>
  </div>
