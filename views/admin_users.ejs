<!DOCTYPE html>
<html>
  <%- include('partials/head', { title: 'Website Users' }) %>
<body>
  <div class="container">
    <%- include('partials/header', { user: user }) %>
    <%- include('partials/sidebar', { active: 'admin' }) %>

    <main class="content">
      <h1>Website Users</h1>
      <p>Welcome, <%= user.username %> (role: <%= user.role %>)</p>

      <h2>Users (<%= users.length %>)</h2>
      <table class="users-table">
        <thead>
          <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Online</th>
            <th>Last Active</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(u, idx) { %>
            <tr>
              <td><%= u.username %></td>
              <td><%= u.role %></td>
              <td><%= u.createdAt ? new Date(u.createdAt).toLocaleString() : '' %></td>
              <td><%= u.online ? 'Yes' : 'No' %></td>
              <td><%= u.lastActive ? new Date(u.lastActive).toLocaleString() : '' %></td>
              <td class="user-actions">
                <form method="POST" action="/admin/users/delete" style="display:inline;margin:0;" onsubmit="return confirm('Delete user <%= u.username %>? This cannot be undone.');">
                  <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                  <input type="hidden" name="username" value="<%= u.username %>">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
            <tr class="details-row" id="details-<%= idx %>" style="display:none;"><td colspan="6"><div class="user-details">
              Username: <%= u.username %><br/>Role: <%= u.role %><br/>Created At: <%= u.createdAt ? new Date(u.createdAt).toLocaleString() : '' %><br/>Online: <%= u.online ? 'Yes' : 'No' %>
            </div></td></tr>
          <% }); %>
        </tbody>
      </table>

      <p style="margin-top:12px;"><a href="/admin/tools" class="btn btn-ghost">‚Üê Back to Admin Tools</a></p>

      <script>
        window.toggleDetails = function(i) {
          const el = document.getElementById('details-' + i);
          if (!el) return;
          el.style.display = el.style.display === 'none' ? 'table-row' : 'none';
        }
      </script>
      <% if (flash) { %>
        <script>
          (function(){
            const msg = <%- JSON.stringify(flash && flash.message ? flash.message : '') %>;
            if (msg) alert(msg);
          })();
        </script>
      <% } %>
    </main>
  </div>
</body>
</html>
