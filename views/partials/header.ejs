<header class="header-main" role="banner">
    <div class="site-title">Task Manager</div>
    <div class="user-info" role="navigation" aria-label="User controls">
        <span>Welcome, <strong><%= user.username %></strong></span>
        <% if (user && user.role === 'admin') { %>
          <a href="/admin/tools" class="btn btn-ghost">Tools</a>
        <% } %>
        <form action="/logout" method="POST" style="display: inline; margin-left:8px;">
            <button type="submit" class="btn btn-ghost" aria-label="Logout">Logout</button>
        </form>
    </div>
</header>
