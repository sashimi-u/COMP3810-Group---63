<!DOCTYPE html>
<html>
<head>
    <title>Tasks</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .task { border: 1px solid #ddd; padding: 15px; margin: 10px 0; }
    </style>
</head>
<body>
    <div class="container">
        <%- include('partials/header', { user: user }) %>
        <%- include('partials/sidebar', { active: 'tasks' }) %>

        <main class="content">
            <h1>Tasks</h1>
                <div style="margin-bottom:12px;">
                <a href="/tasks/create" class="btn btn-primary">Create Task</a>
            </div>

            <% tasks.forEach(task => { %>
                <div class="task">
                    <h3><%= task.title %></h3>
                    <p><%= task.description %></p>
                    <p>Priority: <%= task.priority %> | Status: <%= task.status %></p>
                    <div style="margin-top:8px;">
                        <a href="/tasks/<%= task._id %>/edit">Edit</a>
                        <form action="/tasks/<%= task._id %>/delete" method="POST" style="display:inline; margin-left:8px;">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>

            <p><a href="/">‚Üê Back to Home</a></p>
        </main>
    </div>
</body>
</html>